include mixins/mixins.jade

doctype html
html
  head
    title World Travel Database
    +favicons
  body
    include head.jade
    style
      include style.css
    
    //- Modals
    +imageuploadmodal()
    +addlogmodal()
    
    //- Login / Register form
    if !username
      link(rel='stylesheet', type='text/css', href='/css/landing-page.css')
      +landingpage
      div.row
        .hidden-xs.hidden-sm.col-md-2.col-lg-3
        .col-md-4.col-lg-3
          h3 Login
          +loginform()
        .col-md-4.col-lg-3
          h3 Register
          +registerform()
        .hidden-xs.hidden-sm.col-md-2.col-lg-3
    else
      //- List my travelogues
      h4 My Travelogues
      
      .row
        .hidden-xs.hidden-sm.hidden-md.col-lg-2
        .col-sm-12.col-md-12.col-lg-8
          +addlogbutton()
          br
          br
          
          if travelogues
            for travelogue in travelogues
              +travel(travelogue)

    include footer.html
    script(src='/js/index.js')
    
    script(src="/js/map.js")
    script(async, defer, src="https://maps.googleapis.com/maps/api/js?callback=initMaps")